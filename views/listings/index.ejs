<style>
  .tooglebtn{
    display: none;
    opacity: 1;
  }
  .toogle{
    font-weight: 600;
    margin-left: 1rem;
  }

  .filter {
  min-width: 80px;
  cursor: pointer;
 opacity: 0.6;
}
.filter:hover{
  opacity:1;
}

.filter i {
  font-size: 20px;
  display: block;
}

.filter p {
  margin: 0;
  font-size: 14px;
}

.category-bar {
  position: sticky;
  /* top: 100%;  */
  z-index: 1000;
  white-space: nowrap;
}
.fil{
  display: flex;
  align-items: center;
}
  
</style>

<!-- Category Filter Bar -->
<div class="category-bar fil bg-white border-top ">
  <div class="d-flex overflow-auto gap-3 mt-3 mb-3">
    <div class="filter text-center">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-chess-rook"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>
    <div class="filter text-center">
      <div><i class="fa-solid fa-house-medical-flag"></i></div>
      <p>Houseboat</p>
    </div>
  </div>
  <div class=" filter form-check toogle form-switch ms-auto">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label label" for="switchCheckDefault">Display total after taxes</label>
    </div>
</div>




<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of alllistings){ %>
  <a href="/listings/<%=listing._id%>" class="listing-link">
<div class="card col listing-card" >
  <img src="<%=listing.image[0]?.url%>" class="card-img-top" alt="Listing-Image" style="height: 300px; width: 100%; object-fit: cover;">
  <div class="card-img-overlay"></div>
  <div class="card-body">
    <p class="card-text">
      <b><%=listing.title%></b><br>
      &#x20B9;<%=listing.price.toLocaleString("en-IN")%>/night 
      <i class="tooglebtn"> &nbsp; &nbsp; +18% GST</i>
    </p>
  </div>
</div>
 </a>
<% } %>
</div>


<script>
  let togglebtn = document.getElementById("switchCheckDefault");
  togglebtn.addEventListener("click", ()=>{
    let taxinfo = document.getElementsByClassName("tooglebtn");
    for(info of taxinfo){
      if(info.style.display != "inline"){
      info.style.display = "inline"
      }else{
        info.style.display="none";
      }
    }
  })
</script>
