<% layout('./layouts/boilerplate') -%>
<div class="row">
<div class="col-9 offset-2">
<h3 class="mt-3">Edit List</h3>
    
<form method="post" action="/listings/<%=list._id%>?_method=PATCH" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" value="<%=list.title%>" class="form-control" required>
    </div>
        
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" type="text" class="form-control" required><%=list.description%></textarea>
    </div>

    <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input name="image" type="file"  multiple class="form-control" >
    </div>

    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" type="number" value="<%=list.price%>" class="form-control" required>
        </div>
            
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" type="text"value="<%=list.country%>" class="form-control" required>
        </div>
    </div>
        
    <div class="mb-3">
        <label for="Location" class="form-label">Location</label>
        <input name="listing[location]" type="text"value="<%=list.location%>"  class="form-control" required>
    </div>
        
    <button class="btn edit-btn mt-2 mb-3">Edit</button>
</form>
</div>
</div>